<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinProj.Views.SignPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand">

            <Frame x:Name="innerFrame" Margin="40" Padding="30" HasShadow="False" 
             HorizontalOptions="FillAndExpand" CornerRadius="20" 
             BackgroundColor="White" >
                <StackLayout>
                    <Label Text="If You Already Have Account?" HorizontalTextAlignment="Center"
                           TextColor="Black" FontAttributes="Bold" FontSize="Micro"/>
                    <Button Text="Sign in" BackgroundColor="Red"
                            Padding="3" TextColor="White"
                            Margin="10" CornerRadius="5"/>
                    <Label Text="OR" TextColor="Black"
                           HorizontalTextAlignment="Center" FontAttributes="bold"/>
                    <Button Text="Sign up" BackgroundColor="Gray"
                            Padding="3" TextColor="White"
                            Margin="10" CornerRadius="5"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>